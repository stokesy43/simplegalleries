@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Galleries>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";

    var children = Model.Content.Children<Umbraco.Web.PublishedContentModels.Gallery>();
}


<section class="py-100">
    <div class="container">
        <div class="row">
            @foreach (var page in children)
            {
                <div class="col-md-4 mb-4">
                    <a href="@page.Url">
                        <img class="img-fluid" src="@page.CoverImage.Url" alt="" />
                    </a>

                </div>

            }
        </div>

    </div>
</section>
